{% extends "base.html.jinja" %}

{% block title %}Index{% endblock %}

{% block head %}
{{ super() }}
<style type="text/css">
    #space-btn {
        background-color: #DD5B6C;
        font-size: x-large;
        width: 100%;
        height: 100%;
        min-height: 30vh;

    }

    #earth-btn {
        background-color: #33E4B4;
        font-size: x-large;
        width: 100%;
        height: 100%;
    }

    .container-fluid {
        height: 100%;
        min-height: 90vh;
    }
</style>
{% endblock %}
{% block content %}
<div class="container-fluid d-flex flex-column">
    <div class="my-auto">
        <div class="row mb-5 text-center">
            <h2>Choose your mission</h2>
        </div>
        <div class="row w-75 justify-content-between mx-auto mt-5">
            <div class="col-4 mx-auto text-center">
                <a href="/earth">
                <button id="earth-btn">Earth</button>
                </a>
            </div>
            <div class="col-4 mx-auto text-center">
            <a href="/space">
                <button id="space-btn">Space</button>
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}